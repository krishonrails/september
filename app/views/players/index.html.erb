
<div>
<h1>Listing players</h1>

<table border="1">
  <tr>
    <th>Name</th>
    <th>Dob</th>
    <th>Age</th>
    <th>Type of sport</th>
    <th>Country</th>
    <th>Actions</th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%= player.name %></td>
    <td><%= player.dob %></td>
    <td><%=((Time.now - player.dob.to_time)/(365*24*60*60)).round%>&nbsp;years</td>
    <td><%= player.type_of_sport %></td>
    <td><%= player.country %></td>
    <td><%= link_to 'Show', player %>
    <% if can? :update,:delete, Player%>
    <%= link_to 'Edit', edit_player_path(player) %>
    <%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %><%end%></td>
  </tr>
<% end %>
</table>
<br/>
<div id="new-player">
<%#= link_to 'New Player', new_player_path %>
<!--   <a>abcd</a> -->
</div>


</div>

